{
  "name": "@hwxyz/pikapika-cli",
  "version": "0.0.1",
  "description": "A cli tool to create a project which base on nextjs+koa+typescript",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "dev": "tsc -p tsconfig.json -w",
    "lint": "eslint src/**/* --ext .tsx",
    "lint:fix": "eslint src/**/* --ext .tsx --fix",
    "pb": "npm publish --access public"
  },
  "bin": {
    "pikapika": "./bin/pikapika.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "regexp jira\\-\\d+",
        "regexp jira\\-\\d+\\s?[feat|fix|docs|style|refactor|perf|test|chore|revert]"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hwxyz/pikapika-cli.git"
  },
  "keywords": [
    "nextjs",
    "koa",
    "typescript"
  ],
  "author": "huo.marvin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hwxyz/pikapika-cli/issues"
  },
  "homepage": "https://github.com/hwxyz/pikapika-cli#readme",
  "devDependencies": {
    "@types/clear": "^0.1.0",
    "@types/figlet": "^1.2.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "tsc": "^1.20150623.0",
    "typescript": "^4.1.2",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "commander": "^6.2.0",
    "download-git-repo": "^3.0.2",
    "execa": "^4.1.0",
    "figlet": "^1.5.0",
    "handlebars": "^4.7.6",
    "log-symbols": "^4.0.0",
    "ora": "^5.1.0",
    "ts-jest": "^26.4.4"
  }
}
